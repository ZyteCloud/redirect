    <script>
        var countDown = 5;
        var time = countDown;
        function updateTime() {
            var doc = document.getElementById("timer");
            if (time <= 0) {
                doc.innerText = 0;
            } else {
                var seconds = time % 60;
                doc.innerText = seconds;
                time--;
            }
        }
    </script>
    <script>
        setInterval(updateTime, 1000);
    </script>
